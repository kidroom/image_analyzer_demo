API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# 預設的模型名稱 (如果沒有被特定環境檔案覆寫)
CLASSIFIER_MODEL_NAME=image_classifier_model.h5
DETECTOR_MODEL_NAME=yolov8n.pt
CAPTION_MODEL_NAME=Salesforce/blip-base-captioning-large

# Tesseract 執行檔路徑 (根據你的系統調整)
# 對於 Linux/macOS，通常是 /usr/bin/tesseract
# 對於 Windows，是 tesseract.exe 的完整路徑，例如 C:\\Program Files\\Tesseract-OCR\\tesseract.exe
TESSERACT_CMD=/usr/bin/tesseract

# 圖片預處理目標尺寸 (寬,高)
IMAGE_TARGET_SIZE=224,224